@using Microsoft.AspNetCore.Http
@inject StockDataWebsite.Data.ApplicationDbContext _context
@inject IHttpContextAccessor _httpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alpha Stock Data</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StockDataWebsite.styles.css" asp-append-version="true" />
</head>
<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-TL41QQ3KL4"></script>
<script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-TL41QQ3KL4');
</script>
@functions {
    /// <summary>
    /// Determines if the currently logged-in user is admin by:
    /// 1) reading "Username" from session
    /// 2) looking up the user in your DB
    /// 3) checking the bool Admin column
    /// </summary>
    public bool IsUserAdmin()
    {
        // 1) Attempt to get the logged-in username from session
        var username = _httpContextAccessor.HttpContext.Session.GetString("Username");
        if (string.IsNullOrEmpty(username))
            return false;

        // 2) Look up the user by username in the database
        var user = _context.Users.FirstOrDefault(u => u.Username == username);
        if (user == null)
            return false;

        // 3) Return true if 'Admin' is true
        return user.Admin;
    }
}

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Website Title -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    AlphaStockData
                </a>

                <!-- Toggle Button (for small screens) -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Links -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Left-aligned Links -->
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            @* Only show if the user is admin *@
                            @if (IsUserAdmin())
                            {
                                <a class="nav-link" asp-controller="Scraper" asp-action="Index">
                                    Scraper (Admin)
                                </a>
                            }
                        </li>

                        @* <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">
                                Privacy
                            </a>
                        </li> *@
                    </ul>

                    <!-- Right-aligned Buttons -->
                    <ul class="navbar-nav ms-auto">
                        @if (_httpContextAccessor.HttpContext.Session.GetString("Username") != null)
                        {
                            <!-- Show "Account" if logged in -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="StockData" asp-action="Watchlist">
                                    Account (@_httpContextAccessor.HttpContext.Session.GetString("Username"))
                                </a>
                            </li>
                        }
                        else
                        {
                            <!-- Show Login / Sign Up if not logged in -->
                            <li class="nav-item">
                                <a class="nav-link text-dark btn btn-outline-primary me-2"
                                   asp-controller="Account" asp-action="Login">
                                    Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary text-white"
                                   asp-controller="Account" asp-action="SignUp">
                                    Sign Up
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Alpha Stock Data -
            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

