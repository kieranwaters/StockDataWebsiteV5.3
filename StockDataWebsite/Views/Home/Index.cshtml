@model StockDataWebsite.Models.CompanySelection
@using System.Net
@{
    ViewData["Title"] = "Access Comprehensive US Stock Data"; // Title
    ViewData["Description"] = "Explore our database of over 60 million free stock data records..."; // Description
    var currentPage = ViewBag.CurrentPage ?? 1;
    var totalPages = ViewBag.TotalPages ?? 1;

    // Build the "WebSite" JSON as a plain string:
    var websiteJson = @"{
  ""@context"": ""https://schema.org"",
  ""@type"": ""WebSite"",
  ""url"": ""https://www.yourdomain.com/"",
  ""name"": ""Access Comprehensive US Stock Data"",
  ""description"": ""Explore our database of over 60 million free stock data records..."",
  ""publisher"": {
    ""@type"": ""Organization"",
    ""name"": ""Your Company Name"",
    ""logo"": {
      ""@type"": ""ImageObject"",
      ""url"": ""https://www.yourdomain.com/path-to-your-logo.png""
    }
  },
  ""potentialAction"": {
    ""@type"": ""SearchAction"",
    ""target"": ""https://www.yourdomain.com/SearchResults?CompanySearch={search_term_string}"",
    ""query-input"": ""required name=search_term_string""
  }
}";

    // Build ItemList JSON if we have companies:
    string itemListJson = null;
    if (ViewBag.AllCompanies != null && ViewBag.AllCompanies.Count > 0)
    {
        var sb = new System.Text.StringBuilder();
        sb.AppendLine("{");
        sb.AppendLine("  \"@context\": \"https://schema.org\",");
        sb.AppendLine("  \"@type\": \"ItemList\",");
        sb.AppendLine("  \"itemListElement\": [");
        for (int i = 0; i < ViewBag.AllCompanies.Count; i++)
        {
            var c = ViewBag.AllCompanies[i];
            sb.AppendLine("    {");
            sb.AppendLine("      \"@type\": \"ListItem\",");
            sb.AppendLine($"      \"position\": {i + 1},");
            sb.AppendLine("      \"item\": {");
            sb.AppendLine("        \"@type\": \"Organization\",");
            sb.AppendLine($"        \"name\": \"{c.CompanyName}\",");
            sb.AppendLine($"        \"url\": \"https://www.yourdomain.com/StockData/StockData?companyName={UrlEncode(c.CompanyName)}\",");
            sb.AppendLine($"        \"tickerSymbol\": \"{c.CompanySymbol}\"");
            sb.AppendLine("      }");
            sb.AppendLine(i < ViewBag.AllCompanies.Count - 1 ? "    }," : "    }");
        }
        sb.AppendLine("  ]");
        sb.AppendLine("}");
        itemListJson = sb.ToString();
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="description" content="@ViewData["Description"]" />
    <!-- Output the WebSite JSON -->
    <script type="application/ld+json">@Html.Raw(websiteJson)</script>
    <!-- Output the ItemList JSON only if non-null -->
    @if (!string.IsNullOrEmpty(itemListJson))
    {
        <script type="application/ld+json">@Html.Raw(itemListJson)</script>
    }
</head>
<body>
    <h1 class="text-center">Access Comprehensive US Stock Data</h1>
    <div class="card shadow-lg p-1 mb-2 bg-white rounded">
        <div class="card-body">
            <h2 class="card-title text-center">Company Search</h2>
            <p class="card-text text-center">Quickly browse or search through our extensive collection of US-based companies. Find detailed financial records going back 10 years.</p>
            <form action="/SearchResults" method="get" role="search" aria-label="Search for companies">
                <div class="form-group">
                    <input type="text" class="form-control" id="CompanySearch" name="CompanySearch" placeholder="Enter company name or symbol" required aria-required="true" aria-describedby="companySearchHelp" />
                    <div id="suggestions" class="list-group" role="listbox" aria-label="Search suggestions"></div>
                </div>
                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>
        </div>
    </div>
    <section>
        <h2>All Companies</h2>
        @if (ViewBag.AllCompanies != null && ViewBag.AllCompanies.Count > 0)
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Company Name</th>
                        <th scope="col">Symbol</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var company in ViewBag.AllCompanies)
                    {
                        <tr>
                            <td><a href="/StockData/StockData?companyName=@UrlEncode(company.CompanyName)" title="View financial data for @company.CompanyName">@company.CompanyName</a></td>
                            <td>@company.CompanySymbol</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No companies found.</p>
        }
    </section>
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-end">
            @if (currentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="/Index?page=@(currentPage-1)" aria-label="Previous"><span aria-hidden="true">&laquo; Previous 200</span></a>
                </li>
            }
            @if (currentPage < totalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="/Index?page=@(currentPage+1)" aria-label="Next"><span aria-hidden="true">Next 200 &raquo;</span></a>
                </li>
            }
        </ul>
    </nav>
    @section Scripts {
        <script>
            document.getElementById('CompanySearch').addEventListener('input',function(){
            const query=this.value.trim();
            if(query.length>=2){
            fetch(`/api/companies/search?query=${encodeURIComponent(query)}`)
            .then(response=>response.json())
            .then(data=>{
            const suggestions=document.getElementById('suggestions');
            suggestions.innerHTML='';
            if(data.length>0){
            data.forEach(company=>{
            const suggestionItem=document.createElement('a');
            suggestionItem.classList.add('list-group-item','list-group-item-action');
            suggestionItem.setAttribute('role','option');
            suggestionItem.textContent=`${company.companyName} (${company.companySymbol})`;
            suggestionItem.addEventListener('click',function(){
            document.getElementById('CompanySearch').value=company.companyName;
            suggestions.innerHTML='';
            });
            suggestions.appendChild(suggestionItem);
            });
            }else{
            suggestions.innerHTML='<div class="list-group-item">No results found</div>';
            }
            })
            .catch(error=>console.error('Error fetching suggestions:',error));
            }else{
            document.getElementById('suggestions').innerHTML='';
            }
            });
        </script>
    }
    @functions {
        public string UrlEncode(string value) { return System.Net.WebUtility.UrlEncode(value); }
    }
</body>
</html>
